<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Резюме для отклика" />
            <TextView
                android:id="@+id/dialog_vacancy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="UI/UX дизайнер" />
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>
    
    <TextView
        android:id="@+id/add_cover_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить сопроводительное"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/write_cover_letter"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:hint="Ваше сопроводительное письмо"
        android:visibility="gone"/>
    <Button
        android:id="@+id/send_application_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:text="Откликнуться" />


</LinearLayout>
</androidx.cardview.widget.CardView>
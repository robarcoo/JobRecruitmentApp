<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/cv"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/now_looking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сейчас просматривает 1 человек" />

            <TextView
                android:id="@+id/vacancy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="UI/UX Designer" />

            <TextView
                android:id="@+id/vacancy_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Минск" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мобирикс"
                android:layout_marginTop="4dp"
                app:drawableEndCompat="@drawable/ic_notifications_black_24dp"
                android:drawablePadding="8dp" />
            <TextView
                android:id="@+id/vacancy_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опыт от 1 года до 3 лет"
                android:layout_marginVertical="10dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_notifications_black_24dp" />
            <TextView
                android:id="@+id/published_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опубликовано 20 февраля"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/employerbutton"
            android:text="Откликнуться"
            android:layout_marginTop="21dp"
            android:padding="0dp"
            android:textAllCaps="false"/>
        </LinearLayout>
            <ImageButton
                android:id="@+id/short_favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_notifications_black_24dp" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>